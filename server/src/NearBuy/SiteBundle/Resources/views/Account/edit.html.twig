{% extends "NearBuySiteBundle::account_layout.html.twig" %}

{% block content %}
    <div class="edit">
        {{ form_start(form, { 'action': path('nearbuy_site_account_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        <h1>Modification du profil</h1>

        <div class="row">
            {{ form_label(form.username, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>
        <div class="row">
            {{ form_label(form.email, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>
        <div class="row">
            {{ form_label(form.current_password, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_errors(form.current_password) }}
            {{ form_widget(form.current_password, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>

        <div class="row">
            <a class="btn btn-primary btn-animated" href="{{ path("nearbuy_site_account_changepassword") }}">{{ 'profile.edit.change_password'|trans }}</a>
            <input class="btn btn-primary btn-animated" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}


