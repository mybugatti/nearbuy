{% extends "NearBuySiteBundle::login_register_layout.html.twig" %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="login">
    <form action="{{ path("nearbuy_site_login_check") }}" method="post">
        <h1>Connexion</h1>
        <p>Pas encore de compte ? <a href="{{ path("nearbuy_site_default_register") }}">Inscription</a></p>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row">
            <label class="col-sm-5" for="username">{{ 'security.login.username'|trans }}</label>
            <input class="col-sm-7" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>

        <div class="row">
            <label class="col-sm-5" for="password">{{ 'security.login.password'|trans }}</label>
            <input class="col-sm-7" type="password" id="password" name="_password" required="required" />
        </div>

        <div class="row">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

        <div class="row">
            <input class="btn btn-primary btn-animated" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
</div>

{% endblock %}


