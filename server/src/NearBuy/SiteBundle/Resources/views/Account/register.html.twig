{% extends "NearBuySiteBundle::login_register_layout.html.twig" %}

{% block content %}
    <div class="register">
        {{ form_start(form, {'method': 'post', 'action': path('nearbuy_site_default_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

        <h1>Inscription</h1>
        <p>Vous avez déjà un compte ? <a href="{{ path("nearbuy_site_default_login") }}">Connexion</a></p>
        <div class="row">
            {{ form_label(form.email, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>
        <div class="row">
            {{ form_label(form.username, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>
        <div class="row">
            {{ form_label(form.plainPassword.first, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>
        <div class="row">
            {{ form_label(form.plainPassword.second, null,  { 'label_attr': {'class': 'col-sm-6'} }) }}
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'col-sm-6'} }) }}
        </div>
        <div class="row">
            <input class="btn btn-primary btn-animated" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}


